<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Tracker</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />*@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Tracker", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
            <div id="menu">
                <ul class="menu">
                    <li>
                        <a href="/Home/Index" class="parent"><span>Home</span></a>
                        <div>
                            <ul>
                                <li><a href="/Home/Tracker"><span>Job List</span></a></li>
                                <li><a href="/Home/TrackMe"><span>Track Me</span></a></li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="#" class="parent"><span>Manage</span></a>
                        <div class="columns two">
                            <ul class="one">
                                <li><a href="/Consignment/Index"><span>New Consignment</span></a></li>
                                <li><a href="/Consignment/ShowConsignmentList?Mode=Edit"><span>Edit Consignment</span></a></li>
                                <li><a href="/Consignment/ShowConsignmentList?Mode=Delete"><span>Delete Consignment</span></a></li>
                                <li><a href="/Home/TrackConsignment"><span>Track Consignment</span></a></li>
                                <li><a href="#"><span>Reschedule Consignment</span></a></li>
                                <li><a href="/Job/Index"><span>Manage Job</span></a></li>
                            </ul>
                            <ul class="two">
                                <li><a href="#"><span>New Postman</span></a></li>
                                <li><a href="#"><span>Edit Postman Details</span></a></li>
                                <li><a href="#"><span>Delete Postman Details</span></a></li>
                                <li><a href="#"><span>Track Postman</span></a></li>
                                <li><a href="#"><span>Postman Job List</span></a></li>                                
                            </ul>
                        </div>
                    </li>
                    <li><a href="/Home/About"><span>About</span></a></li>
                    <li class="last"><a href="/Home/Contact"><span>Contacts</span></a></li>                    
                </ul>
            </div>           
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Tracker</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/menu")
    @RenderSection("scripts", required: false)
</body>
</html>
